<div class="panel panel-default">
  <div class="panel-body">
  	<div class="row">
  		<div class="col-lg-8 col-md-8 col-xs-12 col-sm-12">
	        <label>Nome:</label>
	        <input type="text" class="form-control" ng-model="produto.nome">
    	</div>
		<div class="col-lg-2 col-md-2 col-xs-4 col-sm-4">
			<label>Valor:</label>
			<input type="number"
				   class="form-control"
				   placeholder="0.00"
				   required
				   ng-model="produto.valor"
				   min="0"
				   value="0"
				   step="0.01"
				   pattern="^\d+(?:\.\d{1,2})?$"
			>
		</div>
	</div>
  </div>
</div>
